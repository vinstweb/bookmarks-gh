@import "variables"

@font-face
  font-family 'bm-icon'
  src url(icomoon-font-path + '/bm-icon.eot?qgx29v')
  src url(icomoon-font-path + '/bm-icon.eot?qgx29v#iefix') format('embedded-opentype'), url(icomoon-font-path + '/bm-icon.ttf?qgx29v') format('truetype'), url(icomoon-font-path + '/bm-icon.woff?qgx29v') format('woff'), url(icomoon-font-path + '/bm-icon.svg?qgx29v#bm-icon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'bm-icon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-code_light
  &:before
    content icon-code_light
.icon-code_strong
  &:before
    content icon-code_strong
.icon-design_light
  &:before
    content icon-design_light
.icon-design_strong
  &:before
    content icon-design_strong  
    color #5b5c5c
.icon-zh_light
  &:before
    content icon-zh_light
.icon-zh_strong
  &:before
    content icon-zh_strong  
    color #666

